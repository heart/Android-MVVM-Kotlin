<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.quotes.QuotesActivity">

    <TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="0dp"
            android:layout_height="300dp"
            android:text="Hello World!"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tv_quotes"
            tools:showIn="@layout/activity_quotes"/>

    <EditText
            android:hint="Quote"
            android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:id="@+id/edittext_quote"
              app:layout_constraintEnd_toStartOf="@+id/add_quote_button"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="@+id/add_quote_button"/>

    <EditText android:hint="Author"
            android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/edittext_quote"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
              android:id="@+id/edittext_author" app:layout_constraintEnd_toStartOf="@+id/add_quote_button"/>

    <Button android:text="ADD QUOTE" android:layout_width="100dp" android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/add_quote_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_quotes"/>

</androidx.constraintlayout.widget.ConstraintLayout>